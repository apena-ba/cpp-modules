NAME = fileprog

CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98

SRC = main.cpp

OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)
	@echo "\n ‚ÑÇ‚úö‚úö Program compiled ‚úÖ \n"

$(OBJ): $(SRC)
	@$(CXX) $(CXXFLAGS) -c $(SRC)
	@echo "\n ‚öôÔ∏è  Objects made ‚úÖ \n"

clean:
	@rm -rf $(OBJ)
	@rm -rf *.replace
	@echo "\n üß® Objects cleaned ‚úÖ \n"

fclean: clean
	@rm -rf $(NAME)
	@echo "\n üí• Executable destroyed ‚úÖ \n"

re: fclean all

.PHONY: all fclean clean re