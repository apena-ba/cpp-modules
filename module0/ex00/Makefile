NAME = megaphone

CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98

SRC = megaphone.cpp

all: $(NAME)

$(NAME): $(SRC)
	@$(CXX) $(CXXFLAGS) -o $(NAME) $(SRC)
	@echo "\n ‚ÑÇ‚úö‚úö Program compiled ‚úÖ \n"

clean:
	@echo "\n Ôºü No objects to clean ‚ùå \n"

fclean: clean
	@rm -rf $(NAME)
	@echo "\n üí• Executable destroyed ‚úÖ \n"

re: fclean all

.PHONY: all fclean clean re